<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivCloseConfirmPayment"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription=""
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_input"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <co.id.GoGolf.ui.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/gray1"
        android:text="Confirm Payment"
        app:customTextViewFont="CharlevoixPro-Medium.otf"
        />

    <co.id.GoGolf.ui.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cp_please_confirm"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:customTextViewFont="CharlevoixPro-Regular.otf"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/cp_card_number"
            android:textColor="@color/gray1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvCreditCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/gray1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cp_total_amount"
            android:textColor="@color/gray1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvPriceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <co.id.GoGolf.ui.CustomButton
            android:id="@+id/btnConfirmPayment"
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:text="@string/cp_confirm"
            android:background="@drawable/btn_verify_bg"
            android:layout_marginRight="8dp"
            app:customButtonFont="CharlevoixPro-Medium.otf"/>

        <co.id.GoGolf.ui.CustomButton
            android:id="@+id/btnCancelPayment"
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:text="@string/cp_cancel"
            android:background="@drawable/btn_no_bg"
            android:layout_marginLeft="8dp"
            app:customButtonFont="CharlevoixPro-Medium.otf"/>

    </LinearLayout>

</LinearLayout>