<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivClosePointUse"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription=""
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_input"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <co.id.GoGolf.ui.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/dp_title"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:customTextViewFont="CharlevoixPro-Medium.otf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:weightSum="10">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/dp_your_current_point"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:gravity="left|center_vertical"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvCurPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:text="250 Point"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:customTextViewFont="CharlevoixPro-Bold.otf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/dp_necessary_point"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:gravity="left|center_vertical"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvNecPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:text="250 Point"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:customTextViewFont="CharlevoixPro-Bold.otf"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/dp_discount"
            android:gravity="left|center_vertical"
            android:textAppearance="@android:style/TextAppearance.Small"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:text="25%"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/red_default"
            app:customTextViewFont="CharlevoixPro-Bold.otf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/dp_price"
            android:gravity="left|center_vertical"
            android:textAppearance="@android:style/TextAppearance.Small"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_weight="6">

            <co.id.GoGolf.ui.CustomTextView
                android:id="@+id/tvFirstPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_strikethrough"
                android:gravity="right|center_vertical"
                android:text="Rp. 2.500.000"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:customTextViewFont="CharlevoixPro-Bold.otf"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:weightSum="10">

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvLastPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="right|center_vertical"
            android:text="Rp. 2.000.000"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/green"
            app:customTextViewFont="CharlevoixPro-Bold.otf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <co.id.GoGolf.ui.CustomButton
            android:id="@+id/btnYesPointUse"
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:text="@string/dp_yes"
            android:background="@drawable/btn_verify_bg"
            android:layout_marginRight="8dp"
            app:customButtonFont="CharlevoixPro-Medium.otf"/>

        <co.id.GoGolf.ui.CustomButton
            android:id="@+id/btnNoPointUse"
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:text="@string/dp_no"
            android:background="@drawable/btn_no_bg"
            android:layout_marginLeft="8dp"
            app:customButtonFont="CharlevoixPro-Medium.otf"/>

    </LinearLayout>

</LinearLayout>