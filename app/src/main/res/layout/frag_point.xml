<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <co.id.GoGolf.ui.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pp_your_current_point"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/green"
        android:layout_marginTop="32dp"
        app:customTextViewFont="CharlevoixPro-Bold.otf"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        >

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvCurrentPoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/pp_value_point"
            android:textColor="@color/red"
            android:textSize="100sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pp_title_point"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tvCurrentPoint"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="bottom"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"
            />

    </RelativeLayout>

    <co.id.GoGolf.ui.CustomTextView
        android:id="@+id/tvLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pp_last_update"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:customTextViewFont="CharlevoixPro-Regular.otf"/>

    <co.id.GoGolf.ui.CustomButton
        android:id="@+id/btCheckPoint"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/pp_check_point_history"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/white"
        android:background="@drawable/btn_check_point_bg"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:customButtonFont="CharlevoixPro-Medium.otf"/>

    <co.id.GoGolf.ui.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pp_desc"
        android:textSize="10sp"
        android:textColor="@color/green1"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:customTextViewFont="CharlevoixPro-Semibold.otf"
        />

</LinearLayout>