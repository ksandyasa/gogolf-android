<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="2">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pb_payment_price"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left"
            app:customTextViewFont="CharlevoixPro-Regular.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/red"
            android:gravity="right"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2"
        android:gravity="center"
        android:visibility="gone">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pb_deposit_price"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left"
            app:customTextViewFont="CharlevoixPro-Regular.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvActDeposit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/red"
            android:gravity="right"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOldPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:weightSum="2">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pb_total_price"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left"
            app:customTextViewFont="CharlevoixPro-Regular.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvTotalOldPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="right"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAcquisition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2"
        android:visibility="gone">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pb_acquisition_point"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left"
            app:customTextViewFont="CharlevoixPro-Regular.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvActPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:gravity="right"
            app:customTextViewFont="CharlevoixPro-Semibold.otf"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPopbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FF5252"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="10dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pb_cancellation_policy"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            app:customTextViewFont="CharlevoixPro-Medium.otf"/>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/white"
            app:customTextViewFont="CharlevoixPro-Medium.otf"/>

    </LinearLayout>

</LinearLayout>