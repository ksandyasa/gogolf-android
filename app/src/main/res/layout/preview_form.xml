<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <co.id.GoGolf.ui.CustomTextView
        android:id="@+id/tvFlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Flight 1"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:customTextViewFont="CharlevoixPro-Regular.otf"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pv_tee_time"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left|center_vertical"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvTeeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="11.00"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pv_price"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left|center_vertical"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="Rp. 750.000"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pv_player_number"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left|center_vertical"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvPlayerNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="2"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPlayerType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pv_player_type"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left|center_vertical"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvPlayerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="right|center_vertical"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <co.id.GoGolf.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pv_cart"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="left|center_vertical"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="Yes"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:customTextViewFont="CharlevoixPro-Regular.otf"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

</LinearLayout>