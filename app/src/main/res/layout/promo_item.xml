<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <ImageView
        android:id="@+id/ivGolf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_promo_ivgolf_height"
        android:scaleType="centerCrop"
        android:src="@drawable/golf_example" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivGolf"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_date" />

            <co.id.GoGolf.ui.CustomTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 - 14 May 2015"
                android:textColor="@color/gray1"
                android:textAppearance="?android:textAppearanceSmall"
                app:customTextViewFont="CharlevoixPro-Regular.otf"
                />

        </LinearLayout>

        <co.id.GoGolf.ui.CustomTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 700.000"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/green"
            android:layout_marginTop="4dp"
            app:customTextViewFont="CharlevoixPro-Regular.otf"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <co.id.GoGolf.ui.CustomTextView
                android:id="@+id/tvPriceDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 700.000"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/green"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:customTextViewFont="CharlevoixPro-Regular.otf"/>

            <co.id.GoGolf.ui.CustomTextView
                android:id="@+id/tvLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest of limit : 10 Flight"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/gray1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:customTextViewFont="CharlevoixPro-Regular.otf"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>