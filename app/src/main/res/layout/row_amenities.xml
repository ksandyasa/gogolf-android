<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="left|center_vertical">

    <ImageView
        android:id="@+id/ivIconAmenities"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription=""
        android:scaleType="fitCenter"
        android:src="@drawable/golfcart"/>

    <co.id.GoGolf.ui.CustomTextView
        android:id="@+id/tvTitleAmenities"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="Golf Cart"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        app:customTextViewFont="CharlevoixPro-Regular.otf"
        />
    
    <ImageView
        android:id="@+id/ivCheckAmenities"
        android:layout_width="24dp"
        android:layout_height="48dp"
        android:contentDescription=""
        android:scaleType="fitCenter"
        android:src="@drawable/checklist"
        android:layout_marginLeft="4dp"/>

</LinearLayout>